/* 确保页面容器有适当的内边距 */
.container {
  padding: 20px;
  box-sizing: border-box;
}

/* 输入区域样式 */
.input-section {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.input-section input, .input-section textarea {
  padding: 5px;
  margin-bottom: 10px;
  box-sizing: border-box;
}

/* 待办列表样式 */
.todo-list {
  margin-top: 20px;
}

.todo-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.todo-item view {
  flex-grow: 1;
  margin-left: 10px;
}

.todo-item .completed {
  text-decoration: line-through;
  color: grey;
}

/* 按钮样式 */
.delete-btn {
  background-color: red;
  color: white;
  padding: 5px;
  border: none;
  border-radius: 5px;
}

.clear-btn {
  background-color: orange;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 5px;
  margin-top: 20px;
}
